generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Cat {
  id    String @id
  url   String
  votes Vote[]
}

model Vote {
  id     Int     @id @default(autoincrement())
  catId  String
  value  Int // +1 or -1
  userId String? // optional
  cat    Cat     @relation(fields: [catId], references: [id])
}
